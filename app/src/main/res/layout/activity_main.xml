<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kiryanov.arcgisproject.MainActivity">

    <!--mapbox:mapbox_styleUrl="mapbox://styles/vaonjxkx/cjjv8wnxc500i2sr4j16lf66p"-->

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        mapbox:mapbox_cameraTargetLat="47.2"
        mapbox:mapbox_cameraTargetLng="39.6"
        mapbox:mapbox_cameraZoom="5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/add_marker"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#b6b6b6"
            android:textColor="#000"
            android:text="0"
            android:visibility="visible"
            />

        <Button
            android:id="@+id/add_polygon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#b6b6b6"
            android:textColor="#000"
            android:text="0"
            android:visibility="visible"
            />

        <Button
            android:id="@+id/from_geo_json"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#b6b6b6"
            android:textColor="#000"
            android:text="0"
            android:visibility="gone"
            />

    </LinearLayout>

</LinearLayout>
